- extends "layout/basic.jade"
- block head
  script(src="https://apis.google.com/js/platform.js")
  script(src="{{url_for('static', filename='js/login.js')}}")
  meta(name="google-signin-client_id",content="987580281764-u9kspreinnb210um17ikd2cqpsnpl1e8.apps.googleusercontent.com")
- block body
  style.
    .title{
      font-size:18px;
      color:#666;
      font-weight:bold;
      margin-top:20px;
      margin-bottom:10px;
    }
    a{
    margin:10px 0;
    display:inline-block;
    }
  .col-md-4.col-md-offset-4(style='background:white;border-radius:4px; box-shadow: 1px 1px 0 rgba(0,0,0,0.1);margin-top:80px;')
    .col-md-10.col-md-offset-1.pt-20.pb-20
      img.img-responsive(src="{{url_for('static', filename='image/huawei.png')}}")
      .text-center.title My Weekly Status
      form(action="/ui/login_action", method='post')
        .form-group
          label Username
          input.form-control(type='text', name='username')
        .form-group
          label Password
          input.form-control(type='password', name='password')
        .row
          .col-md-12
            input.btn.btn-primary.btn-block(type='submit', style='height:38px') Login
          .col-xs-7
            a(href='/login/google', style='display:block')
              img.img-responsive(src="{{url_for('static', filename='image/signin-google.png')}}")
          .col-md-12
            .text-center.mt-10
              a(href='/ui/register') Don't have an account? Register Now.
        .clearfix
