- extends "layout/basic.jade"
- block body
  style.
    .title{
      font-size:18px;
      color:#666;
      font-weight:bold;
      margin-top:20px;
      margin-bottom:10px;
    }
    a{
    margin:10px 0;
    }
  .col-md-4.col-md-offset-4(style='background:white;border-radius:4px; box-shadow: 1px 1px 0 rgba(0,0,0,0.1);margin-top:80px;')
    .col-md-10.col-md-offset-1.pt-20.pb-20
      img.img-responsive(src="{{url_for('static', filename='image/huawei.png')}}")
      .text-center.title Please Register Your Account Below.
      form(id='register-form', action="/ui/register_action", method='post')
        .form-group
          label Username
          input.form-control(type='text', name='username')
        .form-group
          label Password
          input.form-control(type='password', name='password')
        .form-group
          label Confirm Password
          input.form-control(type='password', name='confirm_password')
        .form-group
          label Email
          input.form-control(type='text', name='email')
        .row
          .col-md-6
            div.g-signin2(data-onsuccess="onSignIn")
          .col-md-12
            input.btn.btn-primary.btn-block(type='submit', style='height:38px') Login
        .clearfix
          
